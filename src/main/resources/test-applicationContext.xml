<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<!--    Set an embedded DB for testing-->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:mem:testdb" />
        <property name="username" value="sa" />
        <property name="password" value="" />
    </bean>
    <bean id="dataPopulator" class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
        <property name="scripts">
            <list>
                <value>classpath:schema.sql</value>
            </list>
        </property>
    </bean>
    <bean id="dataSourceInitializer" class="org.springframework.jdbc.datasource.init.DataSourceInitializer" depends-on="dataSource">
        <property name="dataSource" ref="dataSource"/>
        <property name="databasePopulator" ref="dataPopulator"/>
    </bean>
    <bean id="userDao9" class="spring.ch2_test.c_testing_principles.UserDao9">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>
